<div class="page-header">
  <center><h3><%= @article.title %></h3></center>
</div>
<div class="row">
 <div class="span12">
  <div class="row">
    <div class="span5">
   	<center>
	 <% if @article.has_photo? %>
	 <p>  
	  <%= image_tag @article.photo_path, :class => "img-polaroid"%>
	 </p>
	 <% else %>
	 	No se ha adjuntado ninguna foto para este articulo
	 <% end %>
	 </br>
   <% if can? :update, @article %>
	   <%= link_to 'Actualizar', edit_article_path(@article), :class => 'icon-edit btn btn-primary' %>   
   <% end %>
	 <%= link_to 'Atras', root_path,:class => 'icon-arrow-left btn' %>
   	</center>
    </div>
    <div class="span3">
    <p>
	  <strong><b>Descripcion del Articulo:</b></strong></br>
	  <%= @article.body %>
	</p>  	
  	</div>
  </div>
 </div>
</div>


